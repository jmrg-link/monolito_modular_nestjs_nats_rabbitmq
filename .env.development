NODE_ENV=development

# APIs
PORT=3000
PORT_MONOLITH=3001

# NATS
NATS_URL=nats://nats:4222

# RabbitMQ
RABBITMQ_USER=rabbit_user
RABBITMQ_PASS=rabbit_password
RABBITMQ_URL=amqp://rabbit_user:rabbit_password@rabbitmq:5672
RABBITMQ_QUEUE=main_queue

# MongoDB
MONGO_USER=root
MONGO_PASSWORD=passwordroot
MONGO_DATABASE=app
# Para acceso desde fuera del contenedor (aplicaci√≥n local) usamos localhost
MONGODB_URI=mongodb://root:passwordroot@localhost:27017/app?authSource=admin
MONGODB_DBNAME=app

# JWT
JWT_SECRET=development_jwt_secret
JWT_REFRESH_SECRET=development_jwt_refresh_secret
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# CORS
CORS_ORIGIN=*
