{
  "name": "monolith_modular_nestjs_nats_rabbitmq",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "start:dev:monolith": "cross-env NODE_ENV=development npx nest start monolith --watch",
    "start:dev:api-gateway": "cross-env NODE_ENV=development npx nest start api-gateway --watch",
    "start:dev": "concurrently \"npm run start:dev:monolith\" \"npm run start:dev:api-gateway\"",
    "start:local:monolith": "cross-env NODE_ENV=localhost npx nest start monolith --watch",
    "start:local:api-gateway": "cross-env NODE_ENV=localhost npx nest start api-gateway --watch",
    "start:local": "concurrently \"npm run start:local:monolith\" \"npm run start:local:api-gateway\"",
    "build": "npx nest build",
    "build:monolith": "npx nest build monolith",
    "build:api-gateway": "npx nest build api-gateway",
    "start:prod": "node dist/apps/monolith/main.js",
    "start:prod:monolith": "node dist/apps/monolith/main.js",
    "start:prod:api-gateway": "node dist/apps/api-gateway/main.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.6",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/swagger": "11.1.4",
    "@nestjs/testing": "11.0.20",
    "@types/amqplib": "0.10.7",
    "@types/bcrypt": "5.0.2",
    "@types/compression": "1.7.5",
    "@types/express": "5.0.1",
    "@types/node": "22.14.1",
    "@types/passport-jwt": "4.0.1",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "concurrently": "9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "9.25.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "5.7.0",
    "@nestjs/common": "11.0.20",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.20",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/microservices": "11.0.20",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.0.20",
    "amqplib": "0.10.7",
    "bcrypt": "5.1.1",
    "body-parser": "2.2.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "1.8.0",
    "cookie": "1.0.2",
    "dotenv": "16.5.0",
    "express-rate-limit": "7.5.0",
    "glob": "11.0.1",
    "helmet": "8.1.0",
    "mongoose": "7.8.6",
    "nats": "2.29.3",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "path-to-regexp": "8.2.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "send": "1.2.0",
    "swagger-ui-express": "5.0.1"
  }
}
